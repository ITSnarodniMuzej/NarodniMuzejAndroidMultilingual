<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/donjisprat"
    tools:context=".ChooseRoomActivity">

    <ImageButton
        android:id="@+id/btnRoom1Down"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="850dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="550dp"
        android:background="@android:color/transparent"
        android:contentDescription="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:color/transparent" />

    <ImageButton
        android:id="@+id/btnRoom1Up"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="170dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="90dp"
        android:background="@android:color/transparent"
        android:contentDescription="1"
        app:layout_constraintBottom_toTopOf="@+id/btnRoom1Down"
        app:layout_constraintEnd_toEndOf="@+id/btnRoom1Down"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/transparent" />

    <ImageButton
        android:id="@+id/btnRoom2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="175dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="2"
        app:layout_constraintBottom_toTopOf="@+id/btnRoom1Down"
        app:layout_constraintEnd_toStartOf="@+id/btnUp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnRoom1Up"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:color/transparent" />

    <ImageButton
        android:id="@+id/btnUp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="175dp"
        android:layout_marginEnd="530dp"
        android:layout_marginStart="550dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="5"
        app:layout_constraintBottom_toTopOf="@+id/btnRoom1Down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:color/transparent" />

    <ImageButton
        android:id="@+id/btnRoom3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="175dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="3"
        app:layout_constraintBottom_toTopOf="@+id/btnRoom1Down"
        app:layout_constraintEnd_toStartOf="@+id/btnRoom4Up"
        app:layout_constraintStart_toEndOf="@+id/btnUp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:color/transparent" />

    <ImageButton
        android:id="@+id/btnRoom4Up"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="90dp"
        android:background="@android:color/transparent"
        android:contentDescription="4"
        app:layout_constraintBottom_toTopOf="@+id/btnRoom1Down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btnRoom4Down"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:color/transparent" />

    <ImageButton
        android:id="@+id/btnRoom4Down"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="850dp"
        android:layout_marginTop="550dp"
        android:background="@android:color/transparent"
        android:contentDescription="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:color/transparent" />
</android.support.constraint.ConstraintLayout>