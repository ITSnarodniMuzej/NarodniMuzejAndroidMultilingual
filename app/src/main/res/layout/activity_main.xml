<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/pozadinapocetna"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="573dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="571dp"
        app:srcCompat="@drawable/logo"
        android:contentDescription="@null" />

    <ImageButton
        android:id="@+id/buttonSrpski"
        android:layout_width="260dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="508dp"
        android:layout_marginBottom="431dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/buttonpocetna"
        android:contentDescription="@null"/>

    <ImageButton
        android:id="@+id/buttonEngleski"
        android:layout_width="260dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="509dp"
        android:layout_marginBottom="351dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/buttonpocetna"
        android:contentDescription="@null"/>

    <ImageButton
        android:id="@+id/buttonTurski"
        android:layout_width="260dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="510dp"
        android:layout_marginBottom="271dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/buttonpocetna"
        android:contentDescription="@null"/>

    <ImageButton
        android:id="@+id/buttonFrancuski"
        android:layout_width="260dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="511dp"
        android:layout_marginBottom="187dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/buttonpocetna"
        android:contentDescription="@null"/>

    <ImageButton
        android:id="@+id/buttonRuski"
        android:layout_width="260dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="510dp"
        android:layout_marginBottom="103dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/buttonpocetna"
        android:contentDescription="@null"/>

    <ImageButton
        android:id="@+id/buttonNemacki"
        android:layout_width="260dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="512dp"
        android:layout_marginBottom="18dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/buttonpocetna"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/tvNaslov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonSrpski"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="152dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/eb_garamond"
        android:text="@string/muzej_vuka_i_dositeja"
        android:textColor="#FFF"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tvSrpski"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonSrpski"
        android:layout_alignBottom="@+id/buttonSrpski"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/eb_garamond"
        android:text="@string/dugmeSrpski"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvEngleski"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonEngleski"
        android:layout_alignBottom="@+id/buttonEngleski"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/eb_garamond"
        android:text="@string/dugmeEngleski"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvTurski"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonTurski"
        android:layout_alignBottom="@+id/buttonTurski"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/eb_garamond"
        android:text="@string/dugmeTurski"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvFrancuski"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonFrancuski"
        android:layout_alignBottom="@+id/buttonFrancuski"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/eb_garamond"
        android:text="@string/dugmeFrancuski"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvRuski"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonRuski"
        android:layout_alignBottom="@+id/buttonRuski"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/eb_garamond"
        android:text="@string/dugmeRuski"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvNemacki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonNemacki"
        android:layout_alignBottom="@+id/buttonNemacki"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/eb_garamond"
        android:text="@string/dugmeNemacki"
        android:textColor="#000000"
        android:textSize="24sp" />

</RelativeLayout>